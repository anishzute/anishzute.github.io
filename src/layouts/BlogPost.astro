---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags?: string[];
  heroImage?: string;
}

const { title, description, pubDate, updatedDate, tags, heroImage } = Astro.props;

const formatDate = (d: Date) =>
  d.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
---

<BaseLayout title={title} description={description} ogImage={heroImage}>
  {heroImage && (
    <div class="post-hero">
      <img
        src={heroImage}
        alt={title}
        loading="eager"
        decoding="async"
        width="1080"
        height="480"
      />
    </div>
  )}

  <article class="post-article container">
    <header class="post-header">
      <a href="/blog" class="back-link">← All posts</a>

      <div class="post-meta">
        <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
        {updatedDate && (
          <span class="post-updated">
            Updated <time datetime={updatedDate.toISOString()}>{formatDate(updatedDate)}</time>
          </span>
        )}
      </div>

      <h1>{title}</h1>
      <p class="post-lead">{description}</p>

      {tags && tags.length > 0 && (
        <div class="tags">
          {tags.map(tag => <span class="tag">{tag}</span>)}
        </div>
      )}
    </header>

    <div class="post-content">
      <slot />
    </div>

    <footer class="post-footer">
      <a href="/blog" class="back-link">← Back to all posts</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .post-hero {
    width: 100%;
    max-height: 55vh;
    overflow: hidden;
    border-bottom: 1px solid var(--border);
    background: var(--bg-elevated);
  }

  .post-hero img {
    width: 100%;
    height: 100%;
    max-height: 55vh;
    object-fit: cover;
  }

  .post-article {
    padding-top: 3.5rem;
    padding-bottom: var(--section-gap);
    max-width: 720px;
  }

  /* When no hero image, push past nav */
  .post-article:first-child {
    padding-top: calc(var(--nav-h) + 3.5rem);
  }

  .post-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border);
  }

  .back-link {
    display: inline-block;
    font-size: 0.85rem;
    color: var(--text-3);
    text-decoration: none;
    margin-bottom: 2rem;
    transition: color 0.15s;
  }

  .back-link:hover { color: var(--text-2); }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .post-meta time {
    font-size: 0.8rem;
    color: var(--text-3);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .post-updated {
    font-size: 0.8rem;
    color: var(--text-3);
    padding-left: 1rem;
    border-left: 1px solid var(--border-strong);
  }

  .post-header h1 {
    margin-bottom: 0.75rem;
    font-size: clamp(1.8rem, 4vw, 2.6rem);
  }

  .post-lead {
    font-size: 1.05rem;
    color: var(--text-2);
    line-height: 1.7;
    margin-bottom: 1.25rem;
    max-width: 60ch;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
  }

  /* ── Post prose ────────────────────────────────────────────── */
  .post-content {
    line-height: 1.8;
    font-size: 1.02rem;
    color: var(--text-2);
  }

  .post-content :global(h2) {
    font-size: 1.45rem;
    color: var(--text);
    margin: 2.5rem 0 0.85rem;
    padding-top: 2.5rem;
    border-top: 1px solid var(--border);
    letter-spacing: -0.02em;
  }

  .post-content :global(h3) {
    font-size: 1.15rem;
    color: var(--text);
    margin: 2rem 0 0.6rem;
  }

  .post-content :global(p) {
    margin-bottom: 1.4rem;
    max-width: 68ch;
    color: var(--text-2);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1.4rem;
    padding-left: 1.5rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.4rem;
    color: var(--text-2);
  }

  .post-content :global(strong) { color: var(--text); }

  .post-content :global(a) { color: var(--accent); }
  .post-content :global(a:hover) { color: var(--accent-hover); }

  .post-content :global(blockquote) {
    border-left: 2px solid var(--accent);
    padding-left: 1.25rem;
    margin: 1.5rem 0;
    color: var(--text-3);
    font-style: italic;
  }

  .post-content :global(pre) { margin: 1.75rem 0; }

  .post-content :global(img) {
    border-radius: 6px;
    border: 1px solid var(--border);
    margin: 1.5rem 0;
  }

  .post-content :global(hr) { margin: 2.5rem 0; }

  .post-footer {
    margin-top: 3.5rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }
</style>
