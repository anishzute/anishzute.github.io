---
import BaseLayout from '../layouts/BaseLayout.astro';

/**
 * Add your photos to this array.
 * For local files: place them in public/images/photography/ and use paths like "/images/photography/your-photo.jpg"
 * The alt text is used for accessibility and SEO.
 */
const photos: { src: string; alt: string; width?: number; height?: number }[] = [
  {
    src: 'https://picsum.photos/seed/az-01/800/600',
    alt: 'Mountain road at dusk',
    width: 800,
    height: 600,
  },
  {
    src: 'https://picsum.photos/seed/az-02/800/1000',
    alt: 'Racecar in the paddock',
    width: 800,
    height: 1000,
  },
  {
    src: 'https://picsum.photos/seed/az-03/900/600',
    alt: 'Desert landscape',
    width: 900,
    height: 600,
  },
  {
    src: 'https://picsum.photos/seed/az-04/800/800',
    alt: 'Track day action shot',
    width: 800,
    height: 800,
  },
  {
    src: 'https://picsum.photos/seed/az-05/700/900',
    alt: 'Fabrication detail',
    width: 700,
    height: 900,
  },
  {
    src: 'https://picsum.photos/seed/az-06/1000/650',
    alt: 'Golden hour road shot',
    width: 1000,
    height: 650,
  },
];
---

<BaseLayout
  title="Photography"
  description="A gallery of photos from track days, road trips, and the fabrication shop."
>
  <div class="page-header">
    <h1>Photography</h1>
    <p>Track days, road trips, and whatever catches the eye.</p>
  </div>

  {photos.length === 0 ? (
    <p class="empty">Photos coming soon.</p>
  ) : (
    <div class="photo-grid">
      {photos.map(photo => (
        <div class="photo-item">
          <img
            src={photo.src}
            alt={photo.alt}
            width={photo.width}
            height={photo.height}
            loading="lazy"
            decoding="async"
          />
        </div>
      ))}
    </div>
  )}
</BaseLayout>

<style>
  .photo-grid {
    columns: 2;
    column-gap: 0.75rem;
  }

  @media (min-width: 640px) {
    .photo-grid {
      columns: 3;
    }
  }

  .photo-item {
    break-inside: avoid;
    margin-bottom: 0.75rem;
  }

  .photo-item img {
    width: 100%;
    height: auto;
    border-radius: 4px;
    display: block;
    background: var(--color-surface);
  }

  .empty {
    color: var(--color-muted);
    font-style: italic;
  }
</style>
