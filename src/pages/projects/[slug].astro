---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const isDev = !import.meta.env.PROD;
  const projects = (await getCollection('projects')).filter(
    p => isDev || !p.data.draft
  );
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);
const { title, description, tags, heroImage, githubUrl, liveUrl } = project.data;
---

<BaseLayout title={title} description={description} ogImage={heroImage}>
  {heroImage && (
    <div class="project-hero">
      <img
        src={heroImage}
        alt={title}
        loading="eager"
        decoding="async"
        width="1080"
        height="540"
      />
    </div>
  )}

  <article class="project-article container">
    <header class="project-header">
      <a href="/projects" class="back-link">← All projects</a>

      <div class="project-meta">
        {tags && (
          <div class="tags">
            {tags.map(tag => <span class="tag">{tag}</span>)}
          </div>
        )}
        <div class="project-links">
          {githubUrl && (
            <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="ext-link">
              GitHub →
            </a>
          )}
          {liveUrl && (
            <a href={liveUrl} target="_blank" rel="noopener noreferrer" class="ext-link">
              Live site →
            </a>
          )}
        </div>
      </div>

      <h1>{title}</h1>
      <p class="project-lead">{description}</p>
    </header>

    <div class="project-body">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .project-hero {
    width: 100%;
    max-height: 60vh;
    overflow: hidden;
    border-bottom: 1px solid var(--border);
    background: var(--bg-elevated);
  }

  .project-hero img {
    width: 100%;
    height: 100%;
    max-height: 60vh;
    object-fit: cover;
  }

  .project-article {
    padding-top: 3rem;
    padding-bottom: var(--section-gap);
    max-width: 760px;
  }

  .project-article:first-child {
    padding-top: calc(var(--nav-h) + 3rem);
  }

  .project-header {
    margin-bottom: 2.5rem;
  }

  .back-link {
    display: inline-block;
    font-size: 0.85rem;
    color: var(--text-3);
    text-decoration: none;
    margin-bottom: 1.75rem;
    transition: color 0.15s;
  }

  .back-link:hover { color: var(--text-2); }

  .project-meta {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    flex-wrap: wrap;
    margin-bottom: 1.25rem;
  }

  .tags { display: flex; flex-wrap: wrap; gap: 0.35rem; }

  .project-links { display: flex; gap: 1rem; }

  .ext-link {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--accent);
    text-decoration: none;
  }

  .ext-link:hover { color: var(--accent-hover); }

  .project-header h1 {
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    margin-bottom: 0.75rem;
  }

  .project-lead {
    font-size: 1.05rem;
    color: var(--text-2);
    line-height: 1.7;
    max-width: 60ch;
  }

  .project-body {
    font-size: 1rem;
    line-height: 1.8;
    color: var(--text-2);
  }

  .project-body :global(p) {
    max-width: 65ch;
    margin-bottom: 1.25rem;
  }

  .project-body :global(h2) {
    color: var(--text);
    margin-top: 3rem;
    margin-bottom: 1rem;
  }

  .project-body :global(h3) {
    color: var(--text);
    margin-top: 2.25rem;
    margin-bottom: 0.75rem;
  }

  .project-body :global(h4) {
    color: var(--text);
    margin-top: 1.75rem;
    margin-bottom: 0.5rem;
  }

  .project-body :global(img) {
    width: 100%;
    border-radius: 8px;
    border: 1px solid var(--border);
    margin: 1.5rem 0;
  }

  .project-body :global(ul),
  .project-body :global(ol) {
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
  }

  .project-body :global(li) {
    margin-bottom: 0.4rem;
  }

  .project-body :global(code) {
    font-family: var(--font-mono, monospace);
    font-size: 0.88em;
    background: var(--bg-elevated);
    padding: 0.15em 0.35em;
    border-radius: 3px;
  }

  .project-body :global(pre) {
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1.25rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }

  .project-body :global(pre code) {
    background: none;
    padding: 0;
  }

  .project-body :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 1rem;
    color: var(--text-3);
    margin: 1.5rem 0;
  }
</style>
