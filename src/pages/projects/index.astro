---
import BaseLayout from '../../layouts/BaseLayout.astro';
import projectsData from '../../data/projects.json';
---

<BaseLayout
  title="Projects"
  description="Engineering and software projects by Anish Zute — racecars, embedded systems, and more."
>
  <div class="page-top">
    <div class="container">
      <h1>Projects</h1>
      <p class="page-lead">Engineering, software, and everything in between.</p>
    </div>
  </div>

  <div class="projects-list container">
    {projectsData.map((project, i) => (
      <a href={`/projects/${project.slug}`} class="project-row">
        <div class="project-row-img">
          {project.images.length > 0
            ? <img src={project.images[0]} alt={project.title} loading={i === 0 ? 'eager' : 'lazy'} decoding="async" width="320" height="200" />
            : <div class="img-placeholder"></div>
          }
        </div>
        <div class="project-row-body">
          <div class="tags">
            {project.tags.map(tag => <span class="tag">{tag}</span>)}
          </div>
          <h2>{project.title}</h2>
          <p>{project.description}</p>
          <span class="row-cta">View project →</span>
        </div>
      </a>
    ))}
  </div>
</BaseLayout>

<style>
  .page-top {
    padding-top: calc(var(--nav-h) + 3.5rem);
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--border);
    margin-bottom: 3rem;
  }

  .page-top h1 { margin-bottom: 0.5rem; }
  .page-lead { font-size: 1.05rem; }

  .projects-list {
    display: flex;
    flex-direction: column;
    gap: 1px;
    padding-bottom: var(--section-gap);
  }

  .project-row {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 2.5rem;
    align-items: center;
    padding: 2rem 0;
    border-bottom: 1px solid var(--border);
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s;
  }

  .project-row:hover { opacity: 0.8; text-decoration: none; }

  .project-row-img {
    border-radius: 8px;
    overflow: hidden;
    aspect-ratio: 16/10;
    background: var(--bg-elevated);
    flex-shrink: 0;
  }

  .project-row-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .project-row:hover .project-row-img img {
    transform: scale(1.04);
  }

  .img-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--bg-elevated) 0%, var(--border) 100%);
  }

  .project-row-body {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .project-row-body .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.3rem;
  }

  .project-row-body h2 {
    font-size: 1.5rem;
    color: var(--text);
    letter-spacing: -0.025em;
  }

  .project-row-body p {
    font-size: 0.95rem;
    color: var(--text-2);
    line-height: 1.6;
    max-width: 55ch;
  }

  .row-cta {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--accent);
    margin-top: 0.25rem;
    transition: color 0.15s;
  }

  .project-row:hover .row-cta { color: var(--accent-hover); }

  @media (max-width: 640px) {
    .project-row {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }
  }
</style>
