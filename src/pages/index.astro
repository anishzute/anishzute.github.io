---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import projectsData from '../data/projects.json';

const isDev = !import.meta.env.PROD;
const recentPosts = (await getCollection('blog'))
  .filter(p => isDev || !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const featuredProjects = projectsData.slice(0, 3);
---

<BaseLayout
  title="Anish Zute"
  description="Engineer, builder, and creative. Designing racecars, writing software, and making films."
>
  <section class="hero">
    <h1>Anish Zute</h1>
    <p class="hero-sub">
      Engineer &amp; builder. I design racecars, write software, and make films.
    </p>
    <div class="hero-links">
      <a href="/projects" class="btn">View Projects</a>
      <a href="/about">About me &rarr;</a>
    </div>
  </section>

  <section class="section">
    <h2>Recent Projects</h2>
    <div class="card-grid">
      {featuredProjects.map(project => (
        <a href={`/projects/${project.slug}`} class="card">
          <h3>{project.title}</h3>
          <p>{project.description}</p>
          <div class="tags">
            {project.tags.slice(0, 3).map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </a>
      ))}
    </div>
    <a href="/projects" class="see-all">All projects &rarr;</a>
  </section>

  {recentPosts.length > 0 && (
    <section class="section">
      <h2>From the Blog</h2>
      <ul class="post-list">
        {recentPosts.map(post => (
          <li>
            <a href={`/blog/${post.slug}`} class="post-item">
              <span class="post-title">{post.data.title}</span>
              <time class="post-date" datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
              </time>
            </a>
          </li>
        ))}
      </ul>
      <a href="/blog" class="see-all">All posts &rarr;</a>
    </section>
  )}
</BaseLayout>

<style>
  .hero {
    padding: 3rem 0 4rem;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 3rem;
  }

  .hero h1 {
    margin-bottom: 0.75rem;
  }

  .hero-sub {
    font-size: 1.15rem;
    color: var(--color-muted);
    margin-bottom: 2rem;
    max-width: 55ch;
  }

  .hero-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 0.6rem 1.4rem;
    background: var(--color-accent);
    color: #0e0e0e;
    border-radius: 4px;
    font-weight: 700;
    font-size: 0.9rem;
    text-decoration: none;
    transition: background 0.15s;
  }

  .btn:hover {
    background: var(--color-accent-hover);
    text-decoration: none;
    color: #0e0e0e;
  }

  .section {
    margin-bottom: 3.5rem;
  }

  .section h2 {
    margin-bottom: 1.25rem;
  }

  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .card {
    display: block;
    padding: 1.25rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    text-decoration: none;
    color: inherit;
    transition: border-color 0.15s;
  }

  .card:hover {
    border-color: var(--color-accent);
    text-decoration: none;
  }

  .card h3 {
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .card p {
    font-size: 0.9rem;
    color: var(--color-muted);
    margin-bottom: 0.75rem;
    line-height: 1.5;
    max-width: 100%;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
  }

  .see-all {
    font-size: 0.9rem;
    color: var(--color-muted);
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin-bottom: 1rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    overflow: hidden;
  }

  .post-list li {
    border-bottom: 1px solid var(--color-border);
  }

  .post-list li:last-child {
    border-bottom: none;
  }

  .post-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.875rem 1.25rem;
    text-decoration: none;
    color: inherit;
    gap: 1rem;
    transition: background 0.15s;
  }

  .post-item:hover {
    background: var(--color-surface);
    text-decoration: none;
  }

  .post-title {
    font-size: 0.95rem;
  }

  .post-date {
    font-size: 0.8rem;
    color: var(--color-muted);
    white-space: nowrap;
    flex-shrink: 0;
  }
</style>
