  <script is:inline define:vars={{ allStripPhotos }}>
    (function () {
      var strip = document.getElementById('photo-strip');
      if (!strip || !allStripPhotos.length) return;
      // Fisher-Yates shuffle in-place on a copy, take 7
      var pool = allStripPhotos.slice();
      for (var i = pool.length - 1; i > 0; i--) {
        var j = Math.floor(Math.random() * (i + 1));
        var tmp = pool[i]; pool[i] = pool[j]; pool[j] = tmp;
      }
      pool.slice(0, 7).forEach(function (src) {
        var a = document.createElement('a');
        a.href = '/photography#open=' + encodeURIComponent(src);
        a.className = 'strip-item';
        a.setAttribute('role', 'listitem');
        var img = document.createElement('img');
        img.src = src;
        img.alt = '';
        img.loading = 'lazy';
        img.decoding = 'async';
        // Once loaded, detect portrait and tag the wrapper
        img.addEventListener('load', function () {
          if (img.naturalHeight > img.naturalWidth) {
            a.classList.add('portrait');
          }
        });
        a.appendChild(img);
        strip.appendChild(a);
      });
    })();
  </script>

