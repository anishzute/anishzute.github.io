---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import projectsData from '../data/projects.json';
import { readdirSync } from 'fs';
import { join } from 'path';

const isDev = !import.meta.env.PROD;
const recentPosts = (await getCollection('blog'))
  .filter(p => isDev || !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const featuredProjects = projectsData.slice(0, 3);

// All photography images â€” client-side JS picks a random 7 on each page load
const IMAGE_EXTS = new Set(['.jpg', '.jpeg', '.png', '.webp', '.avif']);
let allStripPhotos: string[] = [];
try {
  const dir = join(process.cwd(), 'public/images/photography');
  allStripPhotos = readdirSync(dir)
    .filter(f => IMAGE_EXTS.has(f.slice(f.lastIndexOf('.')).toLowerCase()))
    .map(f => `/images/photography/${encodeURIComponent(f)}`);
} catch { /* directory missing â€” strip won't render */ }
